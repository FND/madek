{{if terms.length > 0}}
%li.ui-side-filter-lvl2-item{:"data-key-name" => "${key_name}"}
  %a.ui-accordion-toggle.weak 
    %i.ui-side-filter-lvl2-marker
    ${key_label}
  %ul.ui-side-filter-lvl3.ui-accordion-body
    {{tmpl(terms) App.renderPath("media_resources/filter/term")}}

  {{if $item.parent.data.filter_type == 'meta_data'}}
  %label.ui-any-value{:title => "${_jed('Any values')}"}
    %input.any-value.hidden{:type => "checkbox"}
    %i.icon-checkbox
  {{/if}}
  
{{/if}}
