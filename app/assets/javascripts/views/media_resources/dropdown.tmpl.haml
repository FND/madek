.ui-thumbnail-dropdown
  .dropdown.ui-dropdown
    %a.dropdown-toggle.button.block.ui-drop-toggle{"data-toggle" => "dropdown"} 
      Aktionen
    %ul.dropdown-menu.ui-drop-menu{"aria-labelledby" => "dLabel", :role => "menu"}
      {{if is_editable}}
      %li.ui-drop-item
        %a{:href => "/media_resources/${id}/edit", :title => "Metadaten editieren"} 
          %i.icon-pen.mid
          Metadaten editieren
      {{/if}}
      %li.ui-drop-item
        %a{:href => "/media_entries/${id}/browse", :title => "Nach vergleichbaren Medieneinträgen stöbern"}
          %i.icon-eye.mid
          Stöbern
      %li.ui-drop-item
        %a{:title => "Zugriffsberechtigungen lesen/bearbeiten",
           :"data-open-permissions" => true,
           :"data-media-resource-id" => "${id}",
           :"data-manageable" => "${is_manageable}",
           :"data-title" => "${title}"}
          %i.icon-lock.mid
          Zugriffsberechtigungen
      %li.ui-drop-item
        %a{:title => "Zu Set hinzufügen/entfernen",
           :"data-organize-arcs" => true}
          %i.icon-move.mid
          Zu Set hinzufügen/entfernen
      {{if is_deletable}}
      %li.ui-drop-item
        %a{:"data-delete-action" => true, :title => "Unwiederbringlich entfernen"} 
          %i.icon-trash.mid
          Löschen
      {{/if}}