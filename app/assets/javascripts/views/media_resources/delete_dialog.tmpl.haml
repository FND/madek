.modal.hide.fade.ui-modal.narrow{:role => "dialog", :tabindex => "-1"}
  %form
    .ui-modal-head
      %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "${_jed('Close')}"}
        %i.icon-close
      %h3.title-l ${_jed('Delete item')}
    .ui-modal-body
      %p.pam.by-center
        ${_jed('Are you sure you want to delete the following:')}
        %strong ${media_resource.title}
        ?
    .ui-modal-footer
      .ui-actions
        %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} ${_jed('Cancel')}
        %button.primary-button ${_jed('Delete')}
