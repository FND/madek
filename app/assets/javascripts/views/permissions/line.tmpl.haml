%tr

  %td.ui-rights-user
    %a.button.small.ui-rights-remove{:href => "#", :title => "Remove"} ×
    %span.text{:title => "${name}"}
      {{if $item.public}}
      %h4.title-s
        Öffentlichkeit
        %i.icon-privacy-open
      {{else}}
      ${name}
      {{/if}}

  %td.ui-rights-owner
    {{if $item.data.id != undefined && $item.parent.data.ownerIds.indexOf(id) > -1}}
    %input{:type => "radio", :checked => true}
    {{else}}
    %input{:type => "radio"}
    {{/if}}

  %td.ui-rights-role

    %select.ui-rights-role-select
      {{each(i, preset) $item.parent.data.presets}}
      %option{:value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
      {{/each}}

  %td.ui-rights-check{:title => "Betrachten"}

    {{if view}}
    {{if Underscore.isEqual(view.sort(), $item.parent.data.mediaResourceIds.sort())}}
    %label= check_box_tag 'view', "true", true
    {{else}}
    {{if view.length>0}}
    %label.mixed= check_box_tag 'view'
    {{else}}
    %label= check_box_tag 'view', "true", true
    {{/if}}
    {{/if}}
    {{/if}}




  %td.ui-rights-check{:title => "Download Original"}
    %input{:type => "checkbox"}

  %td.ui-rights-check{:title => "Editieren"}
    %input{:type => "checkbox"}

  %td.ui-rights-check.ui-rights-manage{:title => "Berechtigung verwalten"}
    %input{:type => "checkbox"}