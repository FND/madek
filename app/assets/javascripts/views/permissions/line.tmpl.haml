%tr{:"data-id" => "${id}", :"data-name" => "${name}", "data-type" => "${type}", "data-is-current-user-group" => "${isCurrentUserGroup}", "data-is-current-user" => "${isCurrentUser}"}

  %td.ui-rights-user
    {{if $item.manageable}}
    %a.button.small.ui-rights-remove{:href => "#", :title => "Berechtigung entfernen"} Ã—
    {{/if}}

    %span.text{:title => "${name}"}
      %i.current-user-icon.icon-privacy-private
      {{if $item.public}}
      ${_jed('Internet')}
      {{else}}
      ${name}
      {{/if}}

  %td.ui-rights-role

    %div{:class => "ui-custom-select small{{if $item.manageable == false}} disabled{{/if}}"}
      %span.ui-custom-select-text
        {{if App.PermissionPreset.match($item.data, $item.presets)}}
        ${App.PermissionPreset.match($item.data, $item.presets).name}
        {{else}}
        ${_jed('Custom')}
        {{/if}}
      {{if $item.manageable == true}}
      %i.icon-arrow-down.small
      %select.ui-rights-role-select
        {{each(i, preset) $item.presets}}
        {{if App.PermissionPreset.match($item.data, [preset])}}
        %option{:selected => :selected, :value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
        {{else $item.data.type == "userpermission" }}
        %option{:value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
        {{else $item.data.type == "grouppermission" && preset.manage == false }}
        %option{:value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
        {{else preset.manage == false}}
        %option{:value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
        {{/if}}
        {{/each}}
      {{/if}}

  {{tmpl({permission: view, label: "Betrachten", name: "view"}, {manageable: $item.manageable}) App.renderPath("permissions/line/right-check")}}

  {{tmpl({permission: download, label: "Download Original", name: "download"}, {manageable: $item.manageable}) App.renderPath("permissions/line/right-check")}}

  {{tmpl({permission: edit, label: "Editieren", name: "edit"}, {manageable: $item.manageable}) App.renderPath("permissions/line/right-check")}}

  {{tmpl({permission: manage, label: "Berechtigung verwalten", name: "manage"}, {manageable: $item.manageable}) App.renderPath("permissions/line/right-check")}}
