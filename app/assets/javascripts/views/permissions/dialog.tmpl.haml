%form

  %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "${_jed('Close')}", :class => "weak"}
  %h3.title-l 
    ${_jed('Permissions')}
    ${title}
  
  .ui-rights-management
    .pvh.mth
      .ui-preloader

  .ui-actions
    {{if $item.manageable}}
    %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} ${_jed('Cancel')}
    %button.primary-button.disabled{:type => :submit, :disabled => :disabled}
      ${_jed('Save')}
    {{else}}
    %button.button{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} 
      ${_jed('Close')}
    {{/if}}
