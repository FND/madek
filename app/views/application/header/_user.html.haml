.ui-header-user
  .dropdown.ui-dropdown.stick-right
    %a.dropdown-toggle.ui-drop-toggle{"data-toggle" => "dropdown"}
      = current_user.fullname
      %i.icon-arrow-down.bright.stand-alone
    %ul.dropdown-menu.ui-drop-menu{"aria-labelledby" => "dLabel", :role => "menu"}
      %li.ui-drop-item
        %a{:href => my_media_resources_path(:sort => :updated_at)}
          .icon-set.mid.ui-drop-icon
          = _("Content I am responsible for")
      %li.ui-drop-item
        %a{:href => my_favorites_path(:sort => :updated_at)}
          .icon-star.mid.ui-drop-icon
          = _("My favorites")
      %li.ui-drop-item
        %a{:href => my_groups_path}
          .icon-privacy-group.mid.ui-drop-icon
          = _("My workgroups")
      %li.separator
      %li.ui-drop-item
        %a.strong{:href => import_path}
          %i.icon-upload.ui-drop-icon
          = _("Import media")
      - if current_user and current_user.groups.is_member?("Admin")
        %li.ui-drop-item
          %a.strong{:href => app_admin_root_path}
            %i.icon-lock.ui-drop-icon
            = _("Open admin interface")
        %li.ui-drop-item
          - if session[:act_as_uberadmin] == true
            = link_to app_admin_exit_uberadmin_path, method: 'POST', class: 'strong' do
              %i.icon-admin.ui-drop-icon
              = _("Exit admin mode")
          - else
            = link_to app_admin_enter_uberadmin_path, method: 'POST', class: 'strong' do
              %i.icon-admin.ui-drop-icon
              = _("Switch to admin mode")
      %li.ui-drop-item
        %a.strong{:href => "/logout"} 
          %i.icon-power-off.ui-drop-icon
          = _("Log out")
