%h1
  %i.icon-cog
  #{@permission_preset.name}

%ul.list-inline
  %li
    = link_to move_up_app_admin_permission_preset_path(@permission_preset), method: "PUT", class: "btn btn-warning" do
      %i.icon-arrow-up
  %li
    = link_to move_down_app_admin_permission_preset_path(@permission_preset), method: "PUT", class: "btn btn-warning" do
      %i.icon-arrow-down
  %li
    =link_to edit_app_admin_permission_preset_path(@permission_preset), class: "btn btn-warning" do
      %i.icon-pen
      Edit
  %li
    =link_to app_admin_permission_preset_path(@permission_preset), method: :delete, class: "btn btn-danger", data: {confirm: "Are you really want to delete this usage term?"} do
      %i.icon-trash-o
      Delete

%table.table.table-striped
  %thead
  %tbody
  - @permission_preset.attributes.each do |name,value|
    %tr
      %td= name.capitalize.split("_").join(" ")
      - case name
      - when nil
      - else
        %td= value
