= form_for [:app_admin, @permission_preset], html: {class: "form-horizontal", role: "form"} do |f|

  .form-group
    %label.control-label.col-sm-1 Name
    .col-sm-4
      = f.text_field :name, class: 'form-control'
  .form-group
    %label.control-label.col-sm-1 Download
    .col-sm-4
      = f.check_box :download
  .form-group
    %label.control-label.col-sm-1 View
    .col-sm-4
      = f.check_box :view
  .form-group
    %label.control-label.col-sm-1 Edit
    .col-sm-4
      = f.check_box :edit
  .form-group
    %label.control-label.col-sm-1 Manage
    .col-sm-4
      = f.check_box :manage

  .form-group
    .col-sm-offset-1.col-sm-4
      = button_tag button, type: 'submit', class: "btn btn-success"

