%h1 Media-Entry #{@media_entry.id}

%table.table.table-striped
  %thead
  %tbody
  - @media_entry.attributes.each do |name,value|
    %tr
      %td= name.capitalize.split("_").join(" ")
      - case name
      - when nil
      - else
        %td= value
  %tr
    %td Searchable
    %td= @media_entry.full_text.try(:text)
  %tr
    %td Media-File
    %td
      = link_to app_admin_media_file_path(@media_entry.media_file) do
        Media-File: #{@media_entry.media_file.id}




