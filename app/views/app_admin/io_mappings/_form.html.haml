= form_for [:app_admin, @io_mapping], html: {class: "form-horizontal", role: "form"}, url: @io_mapping.persisted? ? "#{app_admin_io_mapping_path(@io_mapping.io_interface_id + "," + @io_mapping.meta_key_id)}" : "#{app_admin_io_mappings_path}" do |f|

  .form-group
    %label.control-label.col-sm-1 Key map
    .col-sm-4
      = f.text_field :key_map, class: 'form-control'
  .form-group
    %label.control-label.col-sm-1 Key map type
    .col-sm-4
      = f.text_field :key_map_type, class: 'form-control'
  -if @io_mapping.new_record?
    .form-group
      %label.control-label.col-sm-1 Meta key
      .col-sm-4
        = f.select(:meta_key_id, MetaKey.all.collect { |mk| mk.id})
    .form-group
      %label.control-label.col-sm-1 Io interface
      .col-sm-4
        = f.select(:io_interface_id, IoInterface.all.collect { |io| io.id})

  .form-group
    .col-sm-offset-1.col-sm-4
      = button_tag button, type: 'submit', class: "btn btn-success"

