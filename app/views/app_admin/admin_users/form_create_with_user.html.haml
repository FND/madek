%h1 New Admin User with person

= form_for @admin_user, url: create_with_user_app_admin_admin_users_path, method: 'POST', html: {class: "form-horizontal", role: "form"} do |f|

  %fieldset.well 
    - [:last_name, :first_name].each do |field|
      .form-group
        %label.control-label.col-sm-2=  field.to_s.capitalize.split("_").join(" ")
        .col-sm-4
          = text_field :person, field, class: "form-control"

  %fieldset.well

    .form-group
      %label.control-label.col-sm-2 Login
      .col-sm-4
        = f.text_field :login, required: true, class: "form-control"

    .form-group
      %label.control-label.col-sm-2 E-mail
      .col-sm-4
        = f.text_field :email, type: 'email', required: true, class: "form-control"

    .form-group
      %label.control-label.col-sm-2 Password
      .col-sm-4
        = f.text_field :password, required: true, class: "form-control"

    .form-group
      %label.control-label.col-sm-2 Notes
      .col-sm-4
        = f.text_area :notes, class: "form-control"

  .form-group
    .col-sm-2
      = f.submit class: "btn btn-success" do
        Create
