.app.view-import.view-import-organize

  = render "application/header"

  .app-body

    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl
            %i.icon-upload
            = _("Import media")

    .app-body-ui-container
      .ui-container.bordered.bright.rounded

        = render :partial => "import/stepline", :locals => {:step => 4}

        .media-import.step4.pal

          %h3.title-l
            = _("Manage newly uploaded content using sets (optional):")

          #ui-resources-preview.ui-container.clearfix.mvl.bordered.midtone.rounded.upload-overview
            = @media_entry_incompletes_partial.html_safe

          .ui-actions
            %a.button{:"data-organize-arcs" => "true", :"data-collection-id" => @media_entry_incompletes_collection_id}
              %i.icon-move
              = _("Add entries to a set")

            %form{:action => complete_import_path, :method => :post, :style => "display: inline"}
              = token_tag nil
              %button.primary-button.large{:type => :submit}
                = _("Finish import")

  .app-footer-push
= render :partial => "application/footer", :locals => {:clipboard => false}
