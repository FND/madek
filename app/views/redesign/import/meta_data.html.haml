.app.view-import

  // HEADER

  .app-header
    %header.ui-header.container.inverted
      .ui-header-brand
        = image_tag "redesign/inserts/image-logo-zhdk.png", :alt => "ZHDK", :class => "ui-header-logo"
        %h1.ui-header-brand-name Z&uuml;rcher Hochschule der K&uuml;nste
        %h2.ui-header-instance-name Medienarchiv der K&uuml;nste

      .ui-header-menu
        %ul.large.primary.tab-navigation
          %li.tab-navigation-item
            %a{:href => "#"} Mein Archiv
          %li.tab-navigation-item
            %a{:href => "#"} Erkunden
          %li.tab-navigation-item
            %a{:href => "#"}
              %i.icon-search.bright
              Suchen
          %li.tab-navigation-item
            %a{:href => "#"}
              %i.icon-help.bright Help

      .ui-header-user
        .dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Franziska M&uuml;ller-Rei&szlig;mann
            %i.icon-arrow-down.bright.stand-alone
          %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
            %li.dropdown-menu-item
              %a{:href => "#"} Item 1
            %li.dropdown-menu-item
              %a{:href => "#"} Item 2
            %li.separator
            %li.dropdown-menu-item
              %a{:href => "#"} Abmelden

  .app-body

    // PAGE TITLE

    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Medien Importieren

    .app-body-container
      .container.bordered.bright.rounded

        .stepline
          .stepline-item
            %h3.title-s.stepline-item-title
              1. Medien übertragen
          .stepline-item
            %h3.title-s.stepline-item-title
              2. Berechtigungen setzen
          .stepline-item.active
            %h3.title-s.stepline-item-title
              3. Metadaten ergänzen
          .stepline-item
            %h3.title-s.stepline-item-title
              4. Medien zusammenstellen

        .media-import.step4.pal

          %h3.title-l
            Titel, Beschreibung und Rechte hinzufügen:
            %span.right
              %label.weak{:href => "#"}
                %input{:disabled => "disabled", :type => "checkbox"}
                  Die bereits vergebenen Werte hervorheben

          .container.clearfix.mvl.bordered.midtone.rounded.upload-overview
            %ul.media-entries.grid
              %li.media-entries-item
                .ui-thumbnail-wrapper.media-entry
                  .thumbnail-audio.thumbnail
                    %img{:alt => "", :src => "/assets/redesign/thumbnails/tmp-thumb-large.jpg"}
                  .thumbnail-metadata
                    %h3.title-s.thumbnail-name Name that can easily go onto 2 lines
                    %h4.title-xs-alt.thumbnail-author Author that can easily go onto 2 lines as well

          .container
            %form

              .form-body
                .form-group.columned
                  %label.form-label
                    Titel
                    %small des Werks oder einer Werkserie
                  .form-item
                    %textarea.block
                .form-group.columned
                  %label.form-label
                    Untertitel
                    %span.form-tooltip-toggle.tooltip-toggle{"data-original-title" => "Der Untertitel erweitert den Titel des Werks oder der Werkserie mit zusätzlichen Informationen. Nicht zu verwechseln mit der Bildlegende oder dem Untertitel eines Films (siehe dort).", "data-placement" => "left", :rel => "tooltip"}
                      %i.icon-questionmark
                  .form-item
                    %textarea.block
                .form-group.columned
                  %label.form-label
                    Autor/in
                    %small Eingabeform: Nachname, Vorname
                    %span.form-tooltip-toggle.tooltip-toggle{"data-original-title" => "Urheber/in des Werkes. Wer hat das Werk erschaffen? Handelt es sich um einen historischen Künstler oder eine zeitgenössische Komponistin? Sind Sie selbst Urheber/in? Auch Pseudonyme und Personengruppen (z.B. Künstlergruppe, Atelier, Firma) sind möglich.", "data-placement" => "left", :rel => "tooltip"}
                      %i.icon-questionmark
                  .form-item
                    %input.block{:type => "text"}
                      %a.button.small.form-person-widget-toggle
                        %i.icon-privacy-private
                      .form-person-widget{:style => "display: none;"}
                        %ul.tab-navigation
                          %li.tab-navigation-item.active
                            %a{"data-toggle" => "tab", :href => "#person1"} Person
                          %li.tab-navigation-item
                            %a{"data-toggle" => "tab", :href => "#gruppe1"} Gruppe
                        .tab-content.mbs
                          #person1.tab-pane.active.pam.container.bordered.rounded-right.rounded-bottom
                            .form-group.rowed
                              %label.form-label Nachname
                              .form-item
                                %input.block{:type => "text"}
                            .form-group.rowed
                              %label.form-label Vorname
                              .form-item
                                %input.block{:type => "text"}
                            .form-group.rowed
                              %label.form-label Pseudonym
                              .form-item
                                %input.block{:type => "text"}
                            .form-group.rowed.pts
                              %button.button.block Personendaten einfügen
                          #gruppe1.tab-pane.pam.container.bordered.rounded-right.rounded-bottom
                            .form-group.rowed
                              %label.form-label Name
                              .form-item
                                %input.block{:type => "text"}
                            .form-group.rowed.pts
                              %button.button.block Gruppendaten einfügen
                .form-group.columned
                  %label.form-label
                    Datierung
                    %span.form-tooltip-toggle.tooltip-toggle{"data-original-title" => "Schlagworte zu Inhalt und Motiv des Werkes. Was ist zu sehen oder zu hören? Welche Themen behandelt das Werk?", "data-placement" => "left", :rel => "tooltip"}
                      %i.icon-questionmark
                  .form-item
                .form-group.columned
                  %label.form-label
                    Schlagworte zu Inhalt und Motiv
                    %small Einzelne Schlagworte, durch Return/Enter getrennt.
                    %span.form-tooltip-toggle.tooltip-toggle{"data-original-title" => "Datum der Erschaffung des Werkes - nicht das Datum, an dem die Datei oder das Medium der Abbildung / der Wiedergabe entstanden ist.       Eingabe einer Zeitspanne: 1923 - 1929 (Leerzeichen Bindestrich Leerzeichen).", "data-placement" => "left", :rel => "tooltip"}
                      %i.icon-questionmark
                  .form-item
                    %input.block{:type => "text"}
                    %a.button.small.form-tags-widget-toggle
                      %i.icon-tag.dark
                    .container.form-tags-widget.mts
                      %ul.tab-navigation
                        %li.tab-navigation-item.active
                          %a{"data-toggle" => "tab", :href => "#tags1"} Meine Schlagworte
                        %li.tab-navigation-item
                          %a{"data-toggle" => "tab", :href => "#tags2"} Beliebtesten
                        %li.tab-navigation-item
                          %a{"data-toggle" => "tab", :href => "#tags3"} Neusten
                      .tab-content.mbs
                        #tags1.tab-pane.active.pam.container.bordered.rounded-right.rounded-bottom
                          %ul.tag-cloud.small
                            %li.tag-button
                              %a
                                Tag 1
                            %li.tag-button
                              %a
                                Tag 2
                            %li.tag-button
                              %a
                                Tag 3
                        #tags2.tab-pane.pam.container.bordered.rounded-right.rounded-bottom
                          %ul.tag-cloud.small
                            %li.tag-button
                              %a
                                Tag 1
                            %li.tag-button
                              %a
                                Tag 2
                            %li.tag-button
                              %a
                                Tag 3
                        #tags3.tab-pane.pam.container.bordered.rounded-right.rounded-bottom
                          %ul.tag-cloud.small
                            %li.tag-button
                              %a
                                Tag 1
                            %li.tag-button
                              %a
                                Tag 2
                            %li.tag-button
                              %a
                                Tag 3

                .form-group.columned
                  %label.form-label
                    Rechteinhaber
                    %small Natürliche oder juristische Person (Institution): z.B. Autor/in des Werks oder eine Institution
                    %span.form-tooltip-toggle.tooltip-toggle{"data-original-title" => "Allgemeine Gattung der Kunst. In welchem künstlerischen Medium artikuliert sich das Werk? Welche künstlerischen Mittel werden zum Ausdruck genutzt?", "data-placement" => "left", :rel => "tooltip"}
                      %i.icon-questionmark
                  .form-item
                    %input.block{:type => "text"}
                    %a.button.small.form-item-extension-toggle
                      %i.icon-plus.dark
                      Weitere Angaben
                    .container.pam.bordered.rounded.form-item-extension
                      .form-group.rowed
                        %label.form-label Rechtsschutz
                        .form-item
                          %select.block
                            %option Unbekannt
                            %option Public Domain
                            %option ...
                      .form-group.rowed
                        %label.form-label Nutzungsbedingungen
                        .form-item
                          %textarea.block
                      .form-group.rowed
                        %label.form-label
                          Hinweise zu Rechtsgrundlagen
                          %small Eingabeformat: http://www.beispiel.ch [Datum des letzten Zugriffs]
                        .form-item
                          %textarea.block
                      .form-group.rowed
                        %label.form-label ISO-Ländercode
                        .form-item
                .form-group.rowed
                  .actions-bar
                    %a.left.link
                      Abbrechen
                    %a.primary-button.large
                      Weiter&hellip;

  .app-footer
    %footer.ui-footer.container.inverted
      %ul.ui-footer-menu
        %li
          %a{:href => "#"} Informationen zum Projekt
        %li
          %a{:href => "#"} Impressum
        %li
          %a{:href => "#"} Kontakt
        %li
          %a{:href => "#"} Blog
        %li
          %a{:href => "#"} Hilfe
        %li
          %a{:href => "#"} Nutzungsbestimmungen
        %li
          %a{:href => "#"} Freie Software
        %li
          %a{:href => "#"} Archivierungsrichtlinien ZHdK
      %p.ui-footer-copy
        = image_tag "redesign/inserts/image-logo-madek.png", :alt => "MADEK", :class => "ui-footer-logo"
        &copy; 2009-2011 Z&uuml;rcher Hochschule der K&uuml;nste
