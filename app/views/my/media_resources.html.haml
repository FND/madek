          .ui-resources-holder

            .ui-container.table.auto

              = render :partial => "media_resources/list/filter"

              .ui-container.table-cell.table-substance
                
                %ul#ui-resources-list.ui-resources{:class => ui_resources_class}

                  .pvh.mth
                    .ui-preloader

  .app-footer-push
= render "application/footer"

