.app.view-dashboard

  = render "application/header"

  .app-body
    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Meine Arbeitsgruppen

        .ui-body-title-actions.hidden
          %a.primary-button{:href => "#workgroup-new", "data-toggle" => "modal"}
            %i.icon-new-group
            Neue Arbeitsgruppe

    .app-body-ui-container
      .bordered.ui-container.midtone.rounded.table

        = render :partial => "application/sidebar/my_archive"

        .app-body-content.table-cell.table-substance.ui-container

          - unless @workgroups.blank?
            = render :partial => "groups/wrapper", 
                       :locals => {:groups => @workgroups, 
                                   :title => "Arbeitsgruppen",
                                   :as => :table,
                                   :actions => true,
                                   :resources => true,
                                   :id => "my_workgroups"}
            %hr.separator

          - unless @systemgroups.blank?
            = render :partial => "groups/wrapper", 
                       :locals => {:groups => @systemgroups, 
                                   :title => "Systemgruppen",
                                   :as => :table,
                                   :id => "my_systemgroups"}
            %hr.separator

          - unless @departmentgroups.blank?
            = render :partial => "groups/wrapper", 
                       :locals => {:groups => @departmentgroups, 
                                   :title => "Abteilungsgruppen",
                                   :as => :table,
                                   :id => "my_departmentgroups"}
            %hr.separator

  .app-footer-push
= render :partial => "application/footer"

#workgroup-new.modal.hide.fade.ui-modal.narrow{"aria-hidden" => "true", "aria-labelledby" => "workgroup-new-label", :role => "dialog", :tabindex => "-1"}
  %form
    .ui-modal-head
      %h3#workgroup-new-label.title-l Neue Arbeitsgruppe erstellen
      %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "Close", :class => "weak"}
    .ui-modal-body
      .form-body
        .ui-form-group.rowed
          %label.form-label
            Name eingeben
          .form-item
            %input.block{:type => "text"}
    .ui-modal-footer
      .ui-actions
        %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} Abbrechen
        %button.primary-button Erstellen

#workgroup-edit.modal.hide.fade.ui-modal.wide{"aria-hidden" => "true", "aria-labelledby" => "workgroup-edit-label", :role => "dialog", :tabindex => "-1"}
  %form
    .ui-modal-head
      %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "Close", :class => "weak"}
      %h3#workgroup-edit-label.title-l Group Name
    .ui-modal-body
      %table.mbs.block
        %thead
          %tr
            %td User
            %td.by-right Aktionen
        %tbody
          %tr
            %td Pinco
            %td.by-right
              %a.button.small{:href => "#"}
                &#215;
          %tr
            %td Pallino
            %td.by-right
              %a.button.small{:href => "#"}
                &#215;

      .form-body
        .ui-form-group.rowed
          .form-item
            %input.block{:type => "text", :placeholder => "Person hinzufügen"}
            %p.form-note
              Es können nur Personen ausgewählt werden, die sich schon einmal im Medienarchiv eingeloggt haben.
    .ui-modal-footer
      .ui-actions
        %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} Abbrechen
        %button.primary-button Speichern

#workgroup-delete.modal.hide.fade.ui-modal.narrow{"aria-hidden" => "true", "aria-labelledby" => "workgroup-delete-label", :role => "dialog", :tabindex => "-1"}
  %form
    .ui-modal-head
      %h3#workgroup-delete-label.title-l Sind Sie sicher?
      %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "Close", :class => "weak"}
    .ui-modal-body
      %p.pvm.phl.by-center You choose to remove an item. Proceed?
    .ui-modal-footer
      .ui-actions
        %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} Abbrechen
        %button.primary-button Speichern
