%ul.ui-tabs{class: classes, id: id}
  - list.each do |tab_id, tab|
    - link = link_from_item(tab)
    - classes = tab[:active] ? 'active' : ''

    %li.ui-tabs-item{class: classes, id: "#{id}-#{tab_id}"}

      - if (link && (tab[:text] || tab[:icon]))
        - haml_tag('a', link) do
          = component('icon', tab[:icon])
