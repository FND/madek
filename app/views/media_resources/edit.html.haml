.app.view-edit-media-resource

  = render "application/header"

  .app-body

    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Metadaten editieren

    .app-body-ui-container

      =form_tag update_multiple_media_resource_meta_data_path(@media_resource), method: 'POST', id: 'edit-media-resource' ,autocomplete: 'off'  do

        = hidden_field :media_resource, :id, value: @media_resource.id

        = render :partial => "media_resources/edit/tabs"

        .bordered.ui-container.tab-content.bright.rounded-bottom.rounded-right

          .phl.ptl
            .ui-container.table

              = render :partial => "media_resources/edit/media_resource"

              .app-body-content.table-cell.ui-container.table-substance.ui-container

                = render :partial => "media_resources/edit/contexts"
                
          .ui-actions.phl.pbl.mtl
            %a.link.weak{:href => media_resource_path(@media_resource)}
              Abbrechen
            %button.primary-button.large{type: 'submit'}
              Speichern

  .app-footer-push
= render :partial => "application/footer"

:coffeescript

  jQuery -> new App.MediaResourcesController.Edit
