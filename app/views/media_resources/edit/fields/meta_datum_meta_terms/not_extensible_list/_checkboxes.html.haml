- definition.meta_key.meta_terms.each do |term|
  %label.col2of6
    %input{:type => "checkbox", 
           :checked => (not meta_datum.nil? and meta_datum.value.include?(term)),
           :name => "resource[meta_data_attributes][#{@i}][value][]", :value => term.id,
           :autocomplete => :off}
    = term