.multi-select
  
  %ul.multi-select-holder

    - meta_datum.value.each do |value|

      %li.multi-select-tag.meta-term
        %input{:name => "resource[meta_data_attributes][#{@i}][value][]", :type => "hidden", :value => value.id}
        = "#{value.name} (#{value.institutional_group_name})"
        %a.multi-select-tag-remove
          .icon-close

    %li.multi-select-input-holder.mbs
      %input.multi-select-input.form-autocomplete-extensible-list.closed-list{:id => "resource[meta_data_attributes][#{@i}][value]",
                                :type => "text", 
                                :"data-terms" => InstitutionalGroup.selectable.collect {|group| {:value => group.to_s, :id => group.id}}.to_json}
        %a.multi-select-input-toggle
          %i.icon-arrow-down
