.ui-form-group.columned{:"data-type" => definition.meta_key.meta_datum_object_type.underscore}
  %label.form-label
    = definition.label
    %small= definition.hint
    - unless definition.description.to_s.blank?
      %span.ui-form-ui-ttip-toggle.ui-ttip-toggle{"data-original-title" => definition.description, "data-placement" => "left", :rel => "tooltip"}
        Hilfe
  .form-item

    .multi-select
      
      %ul.multi-select-holder

        - meta_datum.value.each do |value|

          %li.multi-select-tag
            %input{:name => "resource[meta_data_attributes][#{@i}][value][]", :type => "hidden", :value => value.meta_term_id}
            = value
            %a.multi-select-tag-remove
              .icon-remove

        %li.multi-select-input-holder
          %input.multi-select-input.mbs{:type => "text"}
            %a.multi-select-input-toggle

          %a.button.small.input-helper
            %i.icon-tag.dark
