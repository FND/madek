%ul.ui-tabs.large

  %li.ui-tabs-item.active{:class => media_set_show_page? ? "active" : ""}
    %a{:href => media_set_path(@filter_set)} 
      = _("Filter set")

  - unless @filter_set.parent_sets.count.zero?
    %li.ui-tabs-item{class: media_set_relations_page? ? "active" : ""}
      %a{:href => relations_media_set_path(@filter_set)}
        = _("Parent sets")
