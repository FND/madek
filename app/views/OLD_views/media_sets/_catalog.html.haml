- if AppSettings.catalog_set_id and catalog_set = MediaSet.find(AppSettings.catalog_set_id)
  %section.content_body
    %div.page_title_left
      = catalog_set.title
    %div{:style => "clear:both;"}
      = catalog_set.meta_data.get("description")
    .clear
    - catalog_set.child_media_resources.media_sets.each do |filter_set|
      %a.item_box{:href => category_media_set_path(filter_set)}
        %h4
          = filter_set.title
        = filter_set.meta_data.get("description")
