%script{:type => "text/x-jquery-tmpl", :id => "browsing_thumbnail_mini"}
  %a{:href => "/media_resources/${id}"}
    %div{:class => "thumb_mini"}
      %img{:src => "${image}"}

:javascript
  function browsing_document_ready(){
    $(".meta_data a[data-meta_term_id]").each(function(){
      var that = $(this);
      that.qtip({
        content: {
          text: 'Loading...',
          ajax: {
             url: that.attr('href'),
             data: {with: {image: {as: "base64"}}},
             dataType: 'json',
             success: function(json, status) {
               var container = $("<div id='' style='max-height: 200px; overflow: auto;'></div>");
               container.append($("#browsing_thumbnail_mini").tmpl(json.media_resources));
               this.set('content.text', container);
             }
          }
        },
        position: {
          my: 'bottom center',
          at: 'top center',
          viewport: $(window),
          effect: false
        },
        show: {
           //event: 'click',
           solo: true // Only show one tooltip at a time
        },
        hide: 'unfocus',
        style: {
           classes: 'ui-tooltip-youtube ui-tooltip-shadow',
           width: 500
        }
      });
    });
  }
  
  $(function() {
    browsing_document_ready();
  });
