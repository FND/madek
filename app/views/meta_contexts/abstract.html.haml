- content_for :content do
  .ui-container.rounded-right.rounded-bottom.tab-content
  
    .ui-container.bright.bordered.pal
      
      %h2.title-l.separated.mbl
        = _("These metadata were used most often")
      %p.mbl
        = _("They show this context's area of focus")

      #ui-context-abstract-slider.mbl

      #ui-context-abstract

        
        = render :partial => "abstracts/abstract", :locals => {:meta_data => @abstract}

  :coffeescript

    jQuery -> new App.AbstractController
      el: $(".app.view-meta-context")
      subject: new App.MetaContext $(".app.view-meta-context").data()
      abstractContainer: $("#ui-context-abstract")
      slider: $("#ui-context-abstract-slider")
      totalChildren: #{MediaResource.filter(current_user, {:meta_context_names => [@context.name]}).count}
     
= render :partial => "meta_contexts/layout"

        
